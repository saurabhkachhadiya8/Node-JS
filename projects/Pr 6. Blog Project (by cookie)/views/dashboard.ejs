<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>

    <!-- bootstrap  -->
    <link rel="stylesheet" href="/bootstrap.min.css">
</head>

<body class="d-flex flex-column justify-content-center"
    style="background-color: #ebebeb;background: radial-gradient(circle, rgb(255, 150, 116) 0%, rgb(155, 46, 13) 100%);">

    <%- include('navbar') %>

    <section class="py-5">
        <div class="container">
            <div class="row row-gap-4">
                <% blogs.map((blog) => { %>
                    <div class="col-3">
                        <div class="blog-box rounded">
                            <img src="<%= blog.image %>" alt="<%= blog.image %>" width="100%" height="200px" class="rounded object-fit-cover">
                            <h4><%= blog.title %></h4>
                            <div class="btns d-flex justify-content-between">
                                <a href="/editblog?editId=<%= blog._id %>" class="btn btn-dark" style="width: 25%;">Edit</a>
                                <a href="/readmore?readmoreId=<%= blog._id %>" class="btn btn-dark" style="width: 40%;">Read More</a>
                                <a href="/deleteblog?deleteId=<%= blog._id %>" class="btn btn-dark" style="width: 25%;">Delete</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

        <script src="/bootstrap.bundle.min.js"></script>
</body>

</html>